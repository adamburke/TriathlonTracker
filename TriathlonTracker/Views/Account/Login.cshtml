@model TriathlonTracker.ViewModels.LoginViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TriathlonTracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="auth-container">
        <div class="card auth-card fade-in">
            <div class="card-body">
                <div class="text-center mb-4">
                    <i class="fas fa-swimming-pool fa-3x text-primary mb-3"></i>
                    <h2 class="text-dark fw-bold">@Localizer["Welcome Back"]</h2>
                    <p class="text-muted">@Localizer["Sign in to your TriathlonTracker account"]</p>
                </div>

                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">
                            <i class="fas fa-envelope me-2"></i>@Localizer["Email Address"]
                        </label>
                        <input asp-for="Email" class="form-control" placeholder="@Localizer["Enter your email"]" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">
                            <i class="fas fa-lock me-2"></i>@Localizer["Password"]
                        </label>
                        <input asp-for="Password" class="form-control" placeholder="@Localizer["Enter your password"]" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">@Localizer["Remember me"]</label>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-sign-in-alt me-2"></i>@Localizer["Sign In"]
                        </button>
                    </div>
                </form>

                <div class="text-center my-3">
                    <span class="text-muted">@Localizer["or"]</span>
                </div>

                <div class="d-grid gap-2">
                    <a asp-action="GoogleLogin" class="btn btn-google">
                        <i class="fab fa-google me-2"></i>@Localizer["Sign in with Google"]
                    </a>
                </div>

                <div class="text-center mt-4">
                    <p class="text-muted">
                        @Localizer["Don't have an account?"]
                        <a asp-action="Register" class="text-decoration-none fw-bold">@Localizer["Register here"]</a>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html> 