{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=TriathlonTracker;Username=TriathlonTrackerUser;Password=TriathlonTrackerUser"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Issuer": "your-issuer",
    "Audience": "your-audience",
    "Key": "your-very-strong-secret-key"
  },
  "Gdpr": {
    "DataRetentionPeriods": {
      "PersonalData": 2555,
      "TriathlonData": 1825,
      "ConsentRecords": 2555,
      "ProcessingLogs": 1095,
      "MarketingData": 730
    },
    "ConsentSettings": {
      "DefaultConsentVersion": "1.0",
      "ConsentExpirationMonths": 24,
      "RequireExplicitConsent": true,
      "AllowConsentWithdrawal": true
    },
    "DataExport": {
      "MaxExportsPerDay": 3,
      "SupportedFormats": ["JSON", "CSV", "PDF"],
      "DefaultFormat": "JSON"
    },
    "AccountDeletion": {
      "GracePeriodDays": 30,
      "RequireConfirmation": true,
      "AllowDataRecovery": false
    },
    "Privacy": {
      "DataProtectionOfficerEmail": "dpo@triathlontracker.com",
      "PrivacyPolicyVersion": "1.0",
      "CookiePolicyVersion": "1.0",
      "LastPolicyUpdate": "2025-06-28"
    },
    "Compliance": {
      "EnableAuditLogging": true,
      "LogRetentionDays": 2555,
      "AutoApplyRetentionPolicies": false,
      "NotifyBeforeDataExpiration": true,
      "ExpirationNotificationDays": 30
    }
  }
}
